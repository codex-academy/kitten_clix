<h1>Kittens</h1>

{{#if messages.info}}
<div class="message">
    {{messages.info}}
</div>
{{/if}}

<a href="/add">Add kitten</a>

<table>
    <tr>
        <th></th>
        <th>Name</th>
        <th>Color</th>
        <th>Likes</th>
        <th></th>
    </tr>
    {{#each kittens}}
            <tr>
                <td><img src="https://placekitten.com/200/200?image={{@index}}" alt=""></td>
                <td>{{name}}</td>
                <td>{{color}}</td>
                <td>{{likes}}</td>
                <td><a href="/like/{{name}}">Like</a></td>
            </tr>
    {{/each}}
</table>
